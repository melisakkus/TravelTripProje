@model List<TravelTripProje.Models.Siniflar.Yorumlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yorumlar</h2>
<table class="table table-striped table-bordered">
    <tr>
        <th>Kullanıcı Ad</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog'a Git</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KullaniciAdi</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td><a href="/Blog/BlogDetay/@item.BlogId" style="color:black ; text-decoration:none;">@item.Blog.Baslik</a></td>
            <td><a href="/Yorum/YorumSil/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Yorum/YorumGoruntule/@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>



